  "version": "0.2.0",
  "configurations": [
    {
      "name": "Run coretest",
      "type": "cppdbg",
      "request": "launch",
      "program": "${workspaceFolder}/bin/coretest",
      "args": [],
      "cwd": "${workspaceFolder}/bin",
      "preLaunchTask": "build and test",
      "stopAtEntry": false,
      "internalConsoleOptions": "neverOpen",
      "MIMode": "gdb",
      "setupCommands": [
        {
          "description": "Enable pretty-printing for gdb",
          "text": "-enable-pretty-printing",
          "ignoreFailures": true
        }
      ]
    }
  ]
}